<Page x:Class="quiz.Home"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.Background>
            <ImageBrush ImageSource="quizbg.png"/>
        </Grid.Background>
        <Label Content="Welcom To Quizer" HorizontalAlignment="Center" VerticalAlignment="Bottom" FontSize="48" FontWeight="Bold" Foreground="White"/>
        <Border BorderThickness="1" CornerRadius="4" Grid.Row="1" HorizontalAlignment="Center" Background="Black"  VerticalAlignment="Top" Height="39" Width="154" Margin="0,5,0,0" >
            <Button Content="Start Quiz!" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="39" Width="154" FontSize="16" FontWeight="Bold" BorderBrush="{x:Null}" Background="{x:Null}" Foreground="White" Click="Button_Click"/>
        </Border>

    </Grid>
</Page>
