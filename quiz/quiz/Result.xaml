<Page x:Class="quiz.Result"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:quiz"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Result">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="quizbg.png"/>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Content="" Name="score" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,5,0" FontSize="36" FontWeight="Bold" Foreground="White"/>
        <Button Content="Restart" HorizontalAlignment="Center"  Grid.Row="1" VerticalAlignment="Top" Grid.ColumnSpan="2" Width="117" Margin="0,10,0,0" Background="Black" BorderBrush="{x:Null}" Foreground="White" Height="32" Click="Button_Click"/>

    </Grid>
</Page>
